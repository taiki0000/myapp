<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <!-- ユーザー名 -->
      <h2><%= @user.name %></h2>
      <!-- メールアドレス -->
      <p><%= @user.email %></p>
    </div>
    <div class="user-menus">
      <% if @user.id == @current_user.id %>
          <%= link_to"プロフィールの編集", "/users/#{@user.id}/edit" %>
          <%= link_to("退会する", "/users/#{@user.id}/destroy", {method:"post"}) %>
      <% end %>
    </div>
  </div>
</div>

